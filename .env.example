# ========================================
# PostgreSQL Database Configuration
# ========================================

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=postgres
# LOCAL DEV ONLY - Use a strong random password
# Production: Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password

# ========================================
# Authentication Configuration
# ========================================

# External URL for API callbacks
API_EXTERNAL_URL=http://localhost:8000

# Site URL (where your app is hosted)
SITE_URL=http://localhost:4321

# Additional allowed redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# Disable public signups (require invite codes)
DISABLE_SIGNUP=false

# JWT Configuration
JWT_EXPIRY=3600
# LOCAL DEV ONLY - Production: Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# ========================================
# Email Configuration (SMTP)
# ========================================

ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true

SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=A Market

# Email template paths
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# ========================================
# Phone/SMS Configuration (Twilio)
# ========================================

ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=false

# Twilio credentials for SMS OTP
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Supabase Studio Configuration
# ========================================

STUDIO_PORT=3000
STUDIO_DEFAULT_ORGANIZATION=A Market
STUDIO_DEFAULT_PROJECT=Development

# ========================================
# Kong API Gateway Configuration
# ========================================

KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# Dashboard credentials
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=admin

# ========================================
# PostgREST Configuration
# ========================================

# Database schemas to expose via API
PGRST_DB_SCHEMAS=public,storage,graphql_public

# ========================================
# Storage Configuration
# ========================================

IMGPROXY_ENABLE_WEBP_DETECTION=true

# ========================================
# Analytics Configuration
# ========================================

# LOCAL DEV ONLY - Production: Generate with: openssl rand -base64 32
LOGFLARE_API_KEY=your-super-secret-logflare-key

